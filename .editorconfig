# .editorconfig
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.tf]
indent_size = 2
indent_style = space

[*.sh]
indent_style = space
indent_size = 4

[*.json]
indent_size = 2

[Dockerfile]
indent_size = 4
indent_style = space

[*.md]
trim_trailing_whitespace = false
